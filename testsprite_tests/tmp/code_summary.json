              "summary": "Forward ticket",
              "security": [{"roleAuth": ["controller", "controller_nodal"]}]
            }
          },
          "/controller/tickets/{id}/reply": {
            "post": {
              "summary": "Reply to ticket",
              "security": [{"roleAuth": ["controller", "controller_nodal"]}]
            }
          },
          "/controller/tickets/{id}/approve": {
            "post": {
              "summary": "Approve reply",
              "security": [{"roleAuth": ["controller_nodal"]}]
            }
          },
          "/controller/tickets/{id}/reject": {
            "post": {
              "summary": "Reject reply",
              "security": [{"roleAuth": ["controller_nodal"]}]
            }
          },
          "/controller/tickets/{id}/revert": {
            "post": {
              "summary": "Revert ticket to customer",
              "security": [{"roleAuth": ["controller_nodal"]}]
            }
          }
        }
      }
