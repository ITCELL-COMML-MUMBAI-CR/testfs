{
  "tech_stack": ["PHP", "MySQL", "Bootstrap", "jQuery", "DataTables", "SweetAlert2"],
  "features": [
    {
      "name": "Authentication System",
      "description": "User authentication and role-based access control for customers, controllers, and admins",
      "files": ["src/controllers/AuthController.php", "src/utils/middleware/auth.php", "src/utils/middleware/role.php"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Authentication API",
          "version": "1.0.0"
        },
        "paths": {
          "/login": {
            "post": {
              "summary": "User login",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "login_type": {"type": "string", "enum": ["customer", "staff"]},
                        "identifier": {"type": "string"},
                        "password": {"type": "string"}
                      }
                    }
                  }
                }
              }
            }
          },
          "/logout": {
            "get": {
              "summary": "User logout"
            }
          }
        }
      }
    },
    {
      "name": "Controller Management System",
      "description": "Controller and controller_nodal role management for ticket handling, forwarding, and approval workflows",
      "files": ["src/controllers/ControllerController.php", "src/views/controller/tickets.php", "src/views/controller/ticket-details.php"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Controller Management API",
          "version": "1.0.0"
        },
        "paths": {
          "/controller/dashboard": {
            "get": {
              "summary": "Get controller dashboard",
              "security": [{"roleAuth": ["controller", "controller_nodal"]}]
            }
          },
          "/controller/tickets": {
            "get": {
              "summary": "Get tickets list",
              "security": [{"roleAuth": ["controller", "controller_nodal"]}]
            }
          },
          "/controller/tickets/{id}": {
            "get": {
              "summary": "View ticket details",
              "security": [{"roleAuth": ["controller", "controller_nodal"]}]
